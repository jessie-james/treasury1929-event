# Environment Configuration Example
# Copy to .env and update with your actual values

# Safety Controls (Development Defaults - SAFE BY DEFAULT)
EMAIL_SUPPRESS_OUTBOUND=true
STRIPE_MOCK_MODE=true
BACKUPS_ENABLED=false
PROTECT_EVENT_IDS=39,40
PHX_TZ=America/Phoenix

# Feature Flags
RESERVE_NO_PAY_ENABLED=true

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/treasury1929

# Stripe Configuration (use test keys for development)
STRIPE_WEBHOOK_SECRET=whsec_example
TRE_STRIPE_TEST_SECRET_KEY=sk_test_example
TRE_STRIPE_TEST_PUBLISHABLE_KEY=pk_test_example
STRIPE_SECRET_KEY_NEW=sk_example
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_example

# SendGrid Email
SENDGRID_API_KEY=SG.example
SENDGRID_FROM_EMAIL=events@treasury1929.com

# Google Cloud Storage
GCS_BUCKET_NAME=treasury1929-uploads
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# Session Configuration
SESSION_SECRET=your-secure-session-secret-here

# Application Settings
NODE_ENV=development
PORT=5000